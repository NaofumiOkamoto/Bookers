<header>
  <h1 class="header_title">Books</h1>
</header>

<body>
  <div class="main">
  <table>
    <th>Title</th>
    <th>Body</th>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td><%= link_to 'Show', book_path(book.id) %></td>
        <td><%= link_to 'Edit', edit_book_path(book.id) %></td>
        <td><%= link_to 'Destroy', book_path(book.id), method: :delete, "data-confirm" => "削除しますか" %></td>
      </tr>
    <% end %>
  </table>

  <h2>New book</h2>

  <div class="new_book">
  <%= form_for(@book) do |f| %>

    <div class="new_book_title">
      <h6>Title</h6>
      <%= f.text_field :title %>
    </div>

    <div class="new_book_body">
      <h6>Body</h6>
      <%= f.text_area :body %>
    </div>
    <div class="new_book_submit">
      <%= f.submit'Create Book' %>
    </div>

  <% end %>
  </div>

  </div>
</body>
