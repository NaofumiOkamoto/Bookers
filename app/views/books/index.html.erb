
<% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
<% end %>

<header>
  <h1 class="header_title">Books</h1>
</header>

<body>
<main>
  <table>
    <th>Title</th>
    <th>Body</th>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td><%= link_to 'Show', book_path(book.id) %></td>
        <td><%= link_to 'Edit', edit_book_path(book.id) %></td>
        <td><%= link_to 'Destroy', book_path(book.id), method: :delete, "data-confirm" => "削除しますか" %></td>
      </tr>
    <% end %>
  </table>

  <h2>New book</h2>

  <%= form_for(@book) do |f| %>

    <h4>Title</h4>
    <%= f.text_field :title %>

    <h4>Body</h4>
    <%= f.text_area :body %>
    <p><%= f.submit'Create Book' %></p>

  <% end %>

</main>
</body>
